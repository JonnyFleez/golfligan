<!DOCTYPE html>
<html lang="sv">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin – GolfLigan</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 2rem;
      background: #f9f9f9;
    }

    .container {
      max-width: 900px;
      margin: 0 auto;
      background: white;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .admin-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 1rem;
      margin-bottom: 1.5rem;
    }

    .admin-header h1 {
      margin: 0;
      font-size: 1.5rem;
      color: #1a5d1a;
    }

    .admin-buttons {
      display: flex;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    .btn {
      padding: 0.6rem 1.2rem;
      border-radius: 6px;
      text-decoration: none;
      font-weight: bold;
      font-size: 0.9rem;
      white-space: nowrap;
      transition: background 0.2s;
    }

    .btn-primary {
      background: #1a5d1a;
      color: white;
    }

    .btn-primary:hover {
      background: #146b14;
    }

    .btn-info {
      background: #0066cc;
      color: white;
    }

    .btn-info:hover {
      background: #0052a3;
    }

    .btn-secondary {
      background: #6c757d;
      color: white;
    }

    .btn-secondary:hover {
      background: #5a6268;
    }

    .btn-small {
      padding: 0.4rem 0.8rem;
      font-size: 0.8rem;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1rem;
    }

    th, td {
      padding: 0.8rem;
      border: 1px solid #ddd;
      text-align: left;
    }

    th {
      background: #1a5d1a;
      color: white;
    }

    hr {
      border: 1px solid #eee;
      margin: 1.5rem 0;
    }

    h2 {
      color: #1a5d1a;
      margin-top: 1rem;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- ADMIN HEADER -->
    <div class="admin-header">
      <h1>Admin: <%= playerName %></h1>
      <div class="admin-buttons">
        <a href="/admin/game-day/new" class="btn btn-primary">+ Ny speldag</a>
        <a href="/admin/message" class="btn btn-info">Meddelande</a>
        <a href="/" class="btn btn-primary">Huvudmeny</a>
      </div>
    </div>

    <hr>

    <h2>Speldagar</h2>
    <% if (gameDays.length === 0) { %>
      <p><em>Inga speldagar än. Skapa en!</em></p>
    <% } else { %>
      <table>
        <tr>
          <th>Datum</th>
          <th>Tee</th>
          <th>Spelform</th>
          <th>Sidospel</th>
          <th>Beergame</th>
          <th>Åtgärd</th>
        </tr>
        <% gameDays.forEach(day => { %>
          <tr>
            <td><%= day.date %></td>
            <td><%= day.tee %></td>
            <td><%= day.gameMode %></td>
            <td><%= day.sideGame || '—' %></td>
            <td><%= day.beerGameEnabled ? 'Ja' : 'Nej' %></td>
            <td>
              <a href="/game-day/<%= day.id %>/results" class="btn btn-small btn-primary">Visa resultat</a>
            </td>
          </tr>
        <% }) %>
      </table>
    <% } %>
  </div>
</body>
</html>